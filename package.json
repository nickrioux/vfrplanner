{
    "name": "windy-plugin-vfr-planner",
    "version": "1.0.0",
    "description": "VFR flight planning plugin with ForeFlight import support",
    "main": "dist/plugin.min.js",
    "type": "module",
    "scripts": {
        "build": "npm run generate:airports && rm -rf dist && mkdir dist && SERVE=false rollup -c && cp package.json dist/",
        "build:win": "rmdir /s /q dist && mkdir dist && set SERVE=false && rollup -c && copy package.json dist\\",
        "start": "rollup -w -c",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "test:parser": "node test-parser.js",
        "generate:airports": "node scripts/generate-airports-fallback.cjs",
        "generate:airports:force": "node scripts/generate-airports-fallback.cjs --force"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nrioux/windy-plugin-vfr-planner.git"
    },
    "keywords": [
        "windy",
        "windy.com",
        "plugins",
        "vfr",
        "flight-planning",
        "foreflight",
        "aviation"
    ],
    "author": "Nicolas",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/nrioux/windy-plugin-vfr-planner/issues"
    },
    "homepage": "https://github.com/nrioux/windy-plugin-vfr-planner",
    "dependencies": {
        "@turf/turf": "^6.5.0",
        "@windycom/plugin-devtools": "^3.0.1",
        "fast-xml-parser": "^4.3.0"
    },
    "devDependencies": {
        "@playwright/test": "^1.57.0",
        "@rollup/plugin-json": "^6.1.0",
        "@types/jest": "^30.0.0",
        "jest": "^30.2.0",
        "ts-jest": "^29.4.6"
    }
}
